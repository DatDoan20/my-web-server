extends ../dashboard 

block content
	.body-tb-generic
		h1.h1-tb-generic Reviews
		table.rwd-table
			tr
				th Rating
				th Review Updated
					br
					p (day/month/year)
				th Review
				th Name
				th Avatar
				th Reviewed Product
				th Comments				
			each review in reviews
				tr
					td(data-th='Rating')= `${review.rating}⭐`
					td(data-th='UpdatedAt')= review.updatedAt.toLocaleString('vi-vn')
					td(data-th='Review')= review.review
					td(data-th='Name')= review.userId.name
					td(data-th='Avatar')
						img(src=`/img/users/${review.userId.avatar}` style="width:50px; height:50px; border-radius: 50%;")
					td= review.productId.name
					td(data-th='Comments' style="text-align:center;")= review.comments.length
					td 
						a.btnReply.link(href='#' data-id=`${review._id}` data-name=`${review.userId.name}` data-review=`${review.review}` data-rating=`${review.rating}⭐`) Reply↩️
					td 
						a.link(href=`/admin/review-detail/${review.productId._id}` target='_blank') Overview↩️
	//lib
	script(src='/js/handleReviewOverview.js' type='module')