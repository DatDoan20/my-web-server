extends ../dashboard 

block content
	.body-tb-generic
		h1.h1-tb-generic Reviews
		table.rwd-table
			tr
				th Rating
				th Review Updated
					br
					p (day/month/year)
				th Review
				th Name
				th Avatar
				th Reviewed Product
				th Comments				
			each review in reviews
				tr
					td(data-th='Rating')= `${review.rating}⭐`
					td(data-th='UpdatedAt')= review.updatedAt.toLocaleString('vi-vn', {day: 'numeric', month: 'numeric', year: 'numeric'})
					td(data-th='Review')= review.review
					td(data-th='Name')= review.userId.name
					td(data-th='Avatar')
						img(src=`/img/users/${review.userId.avatar}` style="width:50px; height:50px; border-radius: 50%;")
					td= review.productId.name
					td(data-th='Comments' style="text-align:center;")= review.comments.length
					td 
						a(href=`/admin/review-detail/${review.productId._id}` target='_blank') Reply↩️