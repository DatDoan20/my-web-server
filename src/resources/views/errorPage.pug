doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
		title= title
		link(href='https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;700;900&display=swap')
	
		link(rel='stylesheet' href='/css/tailwind.css')
	body
		div(x-data='setup()' x-init="$refs.loading.classList.add('hidden'); setColors(color);" :class="{ 'dark': isDark }")
			.fixed.inset-0.z-50.flex.items-center.justify-center.text-2xl.font-semibold.text-white.bg-primary-darker(x-ref='loading') Loading.....
			main.flex.items-center.justify-center.h-screen.bg-gray-100(aria-labelledby='pageTitle' class='dark:bg-dark dark:text-light')
				.p-4.space-y-4
					.flex.flex-col.items-start.space-y-3(class='sm:flex-row sm:space-y-0 sm:items-center sm:space-x-3')
						p.font-semibold.text-danger-light.text-9xl(class='dark:text-danger')= statusCode
						.space-y-2
							h1#pageTitle.flex.items-center.space-x-2
								svg.w-6.h-6.text-danger-light(aria-hidden='true' class='dark:text-danger' xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
									path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z')
								span.text-xl.font-medium.text-gray-600(class='sm:text-2xl dark:text-light')= title
							p.text-base.font-normal.text-gray-600(class='dark:text-gray-300')= message
							p.text-base.font-normal.text-gray-600(class='dark:text-gray-300') You may return to
								a.text-blue-600(href='/admin/dashboard' class='hover:underline dark:text-blue-500') dashboard admin page
					form(action='#' method='POST')
						.flex.items-center.justify-center
							input.w-full.px-4.py-2.rounded-l-md(type='text' name='search' placeholder='What are you looking for?' class='focus:outline-none focus:ring focus:ring-primary-light dark:bg-darker dark:focus:ring-primary-darker')
							button.p-2.text-white.rounded-r-md.bg-primary(class='dark:bg-primary-dark hover:bg-primary-dark dark:hover:bg-primary-darker focus:outline-none focus:ring focus:ring-primary-light dark:focus:ring-primary-darker')
								span.sr-only Search
								svg.w-6.h-6(aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
									path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z')
			.fixed.bottom-5.left-5
				button.p-2.transition-colors.duration-200.rounded-full.shadow-md.bg-primary(aria-hidden='true' @click='toggleTheme' class='hover:bg-primary-darker focus:outline-none focus:ring focus:ring-primary')
					svg.w-8.h-8.text-white(x-show='isDark' xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
						path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z')
					svg.w-8.h-8.text-white(x-show='!isDark' xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
						path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z')
	script(src='https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.7.3/dist/alpine.min.js')
	script(src='/js/errorPage.js' type='text/javascript')





