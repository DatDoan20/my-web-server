doctype html
html(lang='en')
  head    
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title Shop|Dashboard
    link(href='https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;700;900&display=swap', rel='stylesheet')
    link(rel='stylesheet', href='/css/tailwind.css')
    link(rel="shortcut icon" href="#")
    link(rel='stylesheet', href='/css/tableGeneric.css')
    block extraStyle
  body
    div(x-data='setup()', x-init="$refs.loading.classList.add('hidden'); setColors(color);", :class="{ 'dark': isDark}")
      .flex.h-screen.antialiased.text-gray-900.bg-gray-100(class='dark:bg-dark dark:text-light')
        // Loading screen
        .fixed.inset-0.z-50.flex.items-center.justify-center.text-2xl.font-semibold.text-white.bg-primary-darker(x-ref='loading')
          | Loading.....
        
        // Sidebar
        include ../layouts/sidebar.pug        
        
        .flex-1.h-full.overflow-x-hidden.overflow-y-auto
          // Navbar
          include ../layouts/navbar.pug

          block content 
            // Main content
            main(style='min-height:100%;')
           
          // Main footer
          include ../layouts/footer.pug

        // Panels
        // Settings Panel
        // Backdrop
        include ../layouts/panel.pug
    
    script(src='https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.7.3/dist/alpine.min.js')
    //-jquery
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    //-axios
    script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js')
    //-alert
    script(src='//cdn.jsdelivr.net/npm/sweetalert2@11')
    //-socket
    script(src='https://cdn.socket.io/4.1.2/socket.io.min.js' integrity='sha384-toS6mmwu70G0fw54EGlWWeA4z3dyJ+dlXBtSURSKN4vyRFOcxd3Bzjj/AoOwY+Rg' crossorigin='anonymous')
    //-
    script(src='/js/script1Dashboard.js')
    script(src='/js/script2Dashboard.js')    
    script(src='/js/handleDashboard.js' type='module')
    block extraScript