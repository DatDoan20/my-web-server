extends dashboard 

block content
    .body-tb-generic
        h1.h1-tb-generic Users         
        table.rwd-table
            tr
                th Phone
                th Email
                th Name 
                th Birth Year
                th Avatar
                th Created At                
            each user in users
                tr
                    td(data-th='Phone')= user.phone 
                    td(data-th='Email')= user.email
                    td(data-th='Name')= user.name
                    td(data-th='BirthYear')= user.birthYear
                    td(data-th='Avatar')
                        img(src=`${user.avatar}/img/otter.png` style="width:50px; height:50px; border-radius: 50%;")
                    td(data-th='CreatedAt')= user.createdAt.toLocaleString('vi-vn', {day: 'numeric', month: 'long', year: 'numeric'})
                    td       
                        a(href="#")
                            img(src='/icon/remove-user.png' alt='remove user' title='remove user')    