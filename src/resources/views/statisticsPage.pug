extends dashboard
block content
  main
    // Content header
    .flex.items-center.justify-between.px-4.py-4.border-b(class='lg:py-6 dark:border-primary-darker')
      h1.text-2xl.font-semibold Dashboard
      a.px-4.py-2.text-sm.text-white.rounded-md.bg-primary(href='https://www.facebook.com/DoubleDDat/', target='_blank', class='hover:bg-primary-dark focus:outline-none focus:ring focus:ring-primary focus:ring-offset-1 focus:ring-offset-white dark:focus:ring-offset-dark')
        | View facebook 
    // Content
    .mt-2
      // State cards
      .grid.grid-cols-1.gap-8.p-4(class='lg:grid-cols-2 xl:grid-cols-4')
        // Value card
        .flex.items-center.justify-between.p-4.bg-white.rounded-md(class='dark:bg-darker')
          div
            h6.text-xs.font-medium.leading-none.tracking-wider.text-gray-500.uppercase(class='dark:text-primary-light')
              | Value
            span.text-xl.font-semibold $30,000
            span.inline-block.px-2.py-px.ml-2.text-xs.text-green-500.bg-green-100.rounded-md
              | +4.4%
          div
            span
              svg.w-12.h-12.text-gray-300(class='dark:text-primary-dark', xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke='currentColor')
                path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z')
        // Users card
        .flex.items-center.justify-between.p-4.bg-white.rounded-md(class='dark:bg-darker')
          div
            h6.text-xs.font-medium.leading-none.tracking-wider.text-gray-500.uppercase(class='dark:text-primary-light')
              | Users
            span.text-xl.font-semibold 50,021
            span.inline-block.px-2.py-px.ml-2.text-xs.text-green-500.bg-green-100.rounded-md
              | +2.6%
          div
            span
              svg.w-12.h-12.text-gray-300(class='dark:text-primary-dark', xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke='currentColor')
                path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z')
        // Orders card
        .flex.items-center.justify-between.p-4.bg-white.rounded-md(class='dark:bg-darker')
          div
            h6.text-xs.font-medium.leading-none.tracking-wider.text-gray-500.uppercase(class='dark:text-primary-light')
              | Orders
            span.text-xl.font-semibold 45,021
            span.inline-block.px-2.py-px.ml-2.text-xs.text-green-500.bg-green-100.rounded-md
              | +3.1%
          div
            span
              svg.w-12.h-12.text-gray-300(class='dark:text-primary-dark', xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke='currentColor')
                path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M13 7h8m0 0v8m0-8l-8 8-4-4-6 6')
        // Tickets card
        .flex.items-center.justify-between.p-4.bg-white.rounded-md(class='dark:bg-darker')
          div
            h6.text-xs.font-medium.leading-none.tracking-wider.text-gray-500.uppercase(class='dark:text-primary-light')
              | Tickets
            span.text-xl.font-semibold 20,516
            span.inline-block.px-2.py-px.ml-2.text-xs.text-green-500.bg-green-100.rounded-md
              | +3.1%
          div
            span
              svg.w-12.h-12.text-gray-300(class='dark:text-primary-dark', xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke='currentColor')
                path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z')
      // Charts
      .grid.grid-cols-1.p-4.space-y-8(class='lg:gap-8 lg:space-y-0 lg:grid-cols-3')
        // Bar chart card
        .col-span-2.bg-white.rounded-md(class='dark:bg-darker', x-data='{ isOn: false }')
          // Card header
          .flex.items-center.justify-between.p-4.border-b(class='dark:border-primary')
            h4.text-lg.font-semibold.text-gray-500(class='dark:text-light') Bar Chart
            .flex.items-center.space-x-2
              span.text-sm.text-gray-500(class='dark:text-light') Last year
              button.relative(class='focus:outline-none', x-cloak='', @click='isOn = !isOn; $parent.updateBarChart(isOn)')
                .w-12.h-6.transition.rounded-full.outline-none.bg-primary-100(class='dark:bg-primary-darker')
                .absolute.top-0.left-0.inline-flex.items-center.justify-center.w-6.h-6.transition-all.duration-200.ease-in-out.transform.scale-110.rounded-full.shadow-sm(:class="{ 'translate-x-0  bg-white dark:bg-primary-100': !isOn, 'translate-x-6 bg-primary-light dark:bg-primary': isOn }")
          // Chart
          .relative.p-4.h-72
            canvas#barChart
        // Doughnut chart card
        .bg-white.rounded-md(class='dark:bg-darker', x-data='{ isOn: false }')
          // Card header
          .flex.items-center.justify-between.p-4.border-b(class='dark:border-primary')
            h4.text-lg.font-semibold.text-gray-500(class='dark:text-light') Doughnut Chart
            .flex.items-center
              button.relative(class='focus:outline-none', x-cloak='', @click='isOn = !isOn; $parent.updateDoughnutChart(isOn)')
                .w-12.h-6.transition.rounded-full.outline-none.bg-primary-100(class='dark:bg-primary-darker')
                .absolute.top-0.left-0.inline-flex.items-center.justify-center.w-6.h-6.transition-all.duration-200.ease-in-out.transform.scale-110.rounded-full.shadow-sm(:class="{ 'translate-x-0  bg-white dark:bg-primary-100': !isOn, 'translate-x-6 bg-primary-light dark:bg-primary': isOn }")
          // Chart
          .relative.p-4.h-72
            canvas#doughnutChart
      // Two grid columns
      .grid.grid-cols-1.p-4.space-y-8(class='lg:gap-8 lg:space-y-0 lg:grid-cols-3')
        // Active users chart
        .col-span-1.bg-white.rounded-md(class='dark:bg-darker')
          // Card header
          .p-4.border-b(class='dark:border-primary')
            h4.text-lg.font-semibold.text-gray-500(class='dark:text-light') Active users right now
          p.p-4
            span#usersCount.text-2xl.font-medium.text-gray-500(class='dark:text-light') 0
            span.text-sm.font-medium.text-gray-500(class='dark:text-primary') Users
          // Chart
          .relative.p-4
            canvas#activeUsersChart
        // Line chart card
        .col-span-2.bg-white.rounded-md(class='dark:bg-darker', x-data='{ isOn: false }')
          // Card header
          .flex.items-center.justify-between.p-4.border-b(class='dark:border-primary')
            h4.text-lg.font-semibold.text-gray-500(class='dark:text-light') Line Chart
            .flex.items-center
              button.relative(class='focus:outline-none', x-cloak='', @click='isOn = !isOn; $parent.updateLineChart()')
                .w-12.h-6.transition.rounded-full.outline-none.bg-primary-100(class='dark:bg-primary-darker')
                .absolute.top-0.left-0.inline-flex.items-center.justify-center.w-6.h-6.transition-all.duration-200.ease-in-out.transform.scale-110.rounded-full.shadow-sm(:class="{ 'translate-x-0  bg-white dark:bg-primary-100': !isOn, 'translate-x-6 bg-primary-light dark:bg-primary': isOn }")
          // Chart
          .relative.p-4.h-72
            canvas#lineChart
  script(src='https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.bundle.min.js')
  script(src='https://cdn.jsdelivr.net/gh/alpine-collective/alpine-magic-helpers@0.5.x/dist/component.min.js')
  script(src='https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.7.3/dist/alpine.min.js')